@page
@model SignalRChat.Pages.Login.RegisterModel
@{
    Layout = null;
}
<html>
<head>
    <title>Register</title>
</head>
<body>
<div class="container">
    Register New User
    <div class="row">
        <div class="col-6" id="error"></div>
    </div>
    <div class="row">
        <div class="col-6" id="alert"></div>
    </div>
    <div class="row">
        <div class="col-2">Name: </div>
        <div class="col-4">
            <input type="text" id="nameInput"/>
        </div>
    </div>
    <div class="row">
        <div class="col-2">Login: </div>
        <div class="col-4">
            <input type="text" id="loginInput"/>
        </div>
        <div class="col-2">
            <button onclick="checkIsAvailable()" id="isAvailableButton">Is Available</button>
        </div>
    </div>
    <div class="row">
        <div class="col-2">Password: </div>
        <div class="col-4">
            <input type="password" id="passwordInput"/>
        </div>
    </div>
    <select name="cboRole" id="cboRole">
        <option value="User">User</option>
        <option value="Dev">Developer</option>
    </select>
    <div class="row">
        <div class="col-6">
            <button onclick="registerUser()" id="sendButton">Register</button>
        </div>
    </div>
</div>
</body>
<script type="module" src="~/js/login.js"></script>
</html>