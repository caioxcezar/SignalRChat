@page
@model SignalRChat.Pages.LogIn.Index

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Log In</title>
</head>
<body>
<div class="container">
    Log In
    <div class="row">
        <div class="col-6" id="error"></div>
    </div>
    <div class="row">
        <div class="col-2">Name: </div>
        <div class="col-4">
            <input type="text" id="nameInput"/>
        </div>
    </div>
