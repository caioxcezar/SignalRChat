        <div class="col-2">Password: </div>
        <div class="col-4">
            <input type="text" id="passwordInput"/>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Log In"/>
        </div>
    </div>
